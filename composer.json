{
    "name": "ahmadvoid/simple-aop",
    "description": "A Simple AOP (Aspect Oriented Programming) implementation provide ability to make aspect which applied on controller methods, by taking advantage of #[Attributes] syntax in PHP 8",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "AhmadVoid\\SimpleAOP\\": "src/"
        }
    },
    "require": {
        "php": ">=8.0",
        "laravel/framework": ">=8.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "AhmadVoid\\SimpleAOP\\AspectServiceProvider"
            ],
            "middleware": [
                "AhmadVoid\\SimpleAOP\\AspectMiddleware"
            ]
        }
    },
    "keywords": [
        "laravel",
        "aop",
        "aspect",
        "attribute"
    ]
}
